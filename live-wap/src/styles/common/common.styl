.l-cir {
  position relative
  leftCircle()
  &::before {
    leftCircle()
    cntEl()
    transform-origin left top
    left 0
  }
}
.r-cir {
  rightCircle()
  position relative
  &::before {
    rightCircle()
    cntEl()
    transform-origin right top
    right 0
  }
}
.pos-center
  position absolute
  top 50%
  left 50%
  transform translate3d(-50%, -50%, 0)

.crs-p {
  cursor pointer
}

.icon-triangle {
  width 20px
  height 20px
  display inline-block
  align-items center
  justify-content center
  iconTran() {
    display inline-block
    content ''
    border-left solid 12px transparent
    border-right solid 12px transparent
  }
  &.up::after {
    iconTran()
    border-bottom solid 12px currentColor
  }
  &.down::after {
    iconTran()
    border-top solid 12px currentColor
  }
}

.clear {
  &::after {
    content ''
    clear both
    display block
  }
}

.txt-ellipsis {
  text-overflow ellipsis
  overflow hidden
  word-break keep-all
}

